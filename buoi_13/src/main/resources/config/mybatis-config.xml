<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="false"/>
    </settings>

    <typeHandlers>
        <typeHandler handler="com.hit.buoi_13.infrastructure.mybatis.LongTypeHandler"/>
        <typeHandler handler="com.hit.buoi_13.infrastructure.mybatis.LocalDateTimeTypeHandler"/>
        <typeHandler handler="com.hit.buoi_13.infrastructure.mybatis.LocalDateTypeHandler"/>
        <typeHandler handler="com.hit.buoi_13.infrastructure.mybatis.DoubleTypeHandler"/>
    </typeHandlers>
</configuration>
